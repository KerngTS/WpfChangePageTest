<Window x:Class="WpfChangePageTest.Windows1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChangePageTest"
        mc:Ignorable="d"
        Title="Windows1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ToolBar Background="Gray">
            <Button Content="UserCtl01" Margin="3" Command="{Binding Page01Command}"/>
            <Button Content="UserCtl02" Margin="3" Command="{Binding Page02Command}"/>
            <TextBlock Text="{Binding CurPageName}" Margin="10 0" VerticalAlignment="Center"/>
            <Menu>
                <MenuItem Header="11111"/>
            </Menu>
        </ToolBar>
        <Border Grid.Row="1" Margin="5" BorderBrush="Gray" BorderThickness="2" CornerRadius="5">
            <ContentPresenter Content="{Binding CurrentPage}"/>
        </Border>
    </Grid>
</Window>
