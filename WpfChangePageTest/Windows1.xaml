                <StackPanel Width="200" Orientation="Horizontal">
                    <Button
                        Width="50"
                        Height="22"
                        Command="{Binding LeftCommand}"
                        Content="左" />
                    <Button
                        Width="50"
                        Height="22"
                        Command="{Binding RightCommand}"
                        Content="右" />
                    <Button
                        Width="80"
                        Height="22"
                        Command="{Binding DialogCommand}"
                        Content="ShowDialog" />

                </StackPanel>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="測試復制" Margin="5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Copy" Command="Copy"/>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBox Margin="5">
                        <TextBox.Text>
                            <Binding Path="RoleMessage1">
                                <Binding.ValidationRules>
                                    <role:RegexValidationRule AllowEmpty="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBox Margin="5">
                        <TextBox.Text>
                            <Binding Path="RoleMessage2">
                                <Binding.ValidationRules>
                                    <role:RegexValidationRule AllowEmpty="False" Pattern="^\d{2}$"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
                



            </Grid>

        </cc:VDrawerHost.Content>
        <cc:VDrawerHost.LeftDrawer>
            <StackPanel Width="100" Background="Blue">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Left Drawer" />
            </StackPanel>
        </cc:VDrawerHost.LeftDrawer>

        <cc:VDrawerHost.RightDrawer>
